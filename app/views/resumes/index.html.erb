<%= link_to "New Resume", new_resume_path %>  
<br> 
	<div style="height: 100px; width: 100%; padding-left: 50px;">
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
				<!-- Indicators -->
				<ol class="carousel-indicators">
					<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
					<li data-target="#myCarousel" data-slide-to="1"></li>
					<li data-target="#myCarousel" data-slide-to="2"></li>
				</ol>

				<!-- Wrapper for slides -->
				<div class="carousel-inner" style="height: 200px;">
					<div class="carousel-inner" role="listbox">
						<% @resumes.each_slice(4) do |slice| %>
							<% slice.each_with_index do |resume,index| %>
								<div class="item <%= index==0 ? 'active' : '' %>" style="height: 200px;">
									<!-- <img src="<%= resume.attachment_url%>" alt="Los Angeles"> -->
									<%= image_tag(resume.attachment_url(:thumb), :size => "300x500") %>

								</div>
							<% end %>
						<% end %>
					</div>
							<!-- Left and right controls -->
					<a class="left carousel-control" href="#myCarousel" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#myCarousel" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
				</div>

<br>   
<br>   
<br>   
<table border="3">   
	 <thead>   
			<tr>   
				<th>Candidate Name</th> 
				<th>Selected choice</th> 
				<th>Images</th>   
				<th colspan="6">Actions</th>   
			</tr> 
				<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
				<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
				<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script> 
				<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
				<link href="http://www.jqueryscript.net/demo/jQuery-Plugin-For-Multi-Select-List-with-Checkboxes-MultiSelect/jquery.multiselect.css" rel="stylesheet" type="text/css">
				<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
				<script src="http://www.jqueryscript.net/demo/jQuery-Plugin-For-Multi-Select-List-with-Checkboxes-MultiSelect/jquery.multiselect.js"></script>
		</thead>   
			
	 <tbody>   
			<% @resumes.each do |resume| %>   
					<tr>   
						<td><%= resume.name %></td> 
						<!-- <td><%#= link_to "Download", resume.attachment_url %></td> -->
						<!-- <td><%#= image_tag(resume.attachment_url, :size => "20*20") %></td> -->
						<%#debugger%>
						<td><%= resume.check %></td>  
						<td><%= image_tag resume.attachment_url(:thumb) %></td>
						<td><%= link_to 'Show', resume_path(resume)%></td> 
   
						<td><%= link_to "Delete",  resume, method: :delete, confirm: "Are you sure you want to delete #{resume.name}?" %></td>   
				 </tr>   
						
			<% end %>   
			<%#= render_breadcrumbs :separator => ' / ' %>
	 </tbody>  
	 <div class="container">
		<h2>Mutiselect</h2>
		<select name="country" multiple class="form-control">
			<option value="" id="list">Category1</option>
			<option value="AF">Category2</option>
			<option value="AL">Category3</option>
		</select>
		<h2>Values</h2>
			<select name="basicOptgroup[]" multiple="multiple">
					<optgroup label="Category1">
						<option value="C++ / C#"><%= @resumes.name%></option>
						<option value="Java">Java</option>
						<option value="Objective-C">Objective-C</option>
					</optgroup>
					<optgroup label="Category2">
						<option value="JavaScript"><%= @resumes.name%></option>
					</optgroup>
					<optgroup label="Category3">
							<option value="Perl">Perl</option>
							<option value="PHP">PHP</option>
							<option value="Ruby on Rails">Ruby on Rails</option>
					</optgroup>
			</select>
	</div>
</table>  
